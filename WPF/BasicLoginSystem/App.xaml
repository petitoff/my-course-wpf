<Application x:Class="BasicLoginSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BasicLoginSystem"
             xmlns:vm="clr-namespace:BasicLoginSystem.Views"
             xmlns:viewModels="clr-namespace:BasicLoginSystem.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <vm:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
            <vm:MainView />
        </DataTemplate>

    </Application.Resources>
</Application>